{
  "name": "Hello Extensions - Text Translator",
  "description": "Translate selected text to Chinese using Claude API",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "sidePanel",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*"
  ],
  "action": {
    "default_icon": "logo.png",
    "default_title": "Text Translator"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
